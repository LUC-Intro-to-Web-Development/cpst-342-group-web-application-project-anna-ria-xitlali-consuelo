                <aside>
                    <h2>Log-in</h2>
                  <form action="/login" method="post">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="username" required>
                            <br>    
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" required>
                            <br>
                        <button onclick="submit" class="btn btn-success" id="submit">Login</button> <br>
                        <br>   
                        <button type= "button" onClick="createAccount()" class="btn btn-success">Create Account</button> 
                    </form>
                       
                </aside>
                
            </main>
            </div>
            <script>

                  function createAccount(){
                //this function need to route to the url of the contact page
                //window is a native function of JavaScript
                window.location.href = "http://localhost:3000/createAccount"
            }
        
            </script>
    </body>
